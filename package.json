{
  "name": "javascript-packages",
  "version": "0.0.0",
  "devDependencies": {
    "ava": "1.0.0-beta.3",
    "babel-cli": "6.26.0",
    "babel-loader": "7.1.3",
    "babel-plugin-external-helpers": "6.22.0",
    "babel-preset-env": "1.6.1",
    "eslint": "4.18.1",
    "eslint-config-airbnb-base": "12.1.0",
    "eslint-config-prettier": "2.9.0",
    "eslint-plugin-import": "2.9.0",
    "eslint-plugin-prettier": "2.6.0",
    "husky": "0.14.3",
    "lerna": "2.9.0",
    "lint-staged": "7.0.0",
    "mock-local-storage": "1.0.5",
    "prettier": "1.10.2",
    "sinon": "4.4.2",
    "webpack": "4.0.0",
    "webpack-cli": "2.0.9"
  },
  "scripts": {
    "lint": "eslint --fix \"{,**,**/**}*.js\"",
    "build": "lerna run build",
    "test": "ava",
    "update-dependencies": "npx npm-check-updates -u -a",
    "precommit": "npm run lint && npm test && npm run build",
    "bootstrap": "lerna bootstrap"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix \"{,**,**/**}*.js\"",
      "git add"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ]
  },
  "ava": {
    "files": [
      "packages/**/*.spec.js",
      "!**/node_modules/"
    ],
    "sources": [
      "packages/**/*.js",
      "!**/node_modules/"
    ],
    "concurrency": 5,
    "failFast": true,
    "powerAssert": true,
    "require": [
      "babel-register"
    ]
  }
}
