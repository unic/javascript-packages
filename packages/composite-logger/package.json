{
  "name": "@unic/composite-logger",
  "version": "0.0.1",
  "description": "Lightweight logger composite to help you debug your modules and disable when you go to production",
  "scripts": {
    "start": "npm run dev",
    "dev": "lerna exec --scope=@unic/composite-logger -- ava --watch",
    "build": "lerna exec --scope=@unic/composite-logger -- webpack --mode \"production\""
  },
  "main": "dist/logger.js",
  "keywords": [
    "composite",
    "logger"
  ],
  "author": "Unic AG",
  "repository": "https://github.com/unic/javascript-packages/tree/master/packages/composite-logger",
  "license": "Apache-2.0",
  "publishConfig": {
    "access": "public"
  },
  "ava": {
    "files": [
      "src/**/*.spec.js"
    ],
    "source": [
      "src/**/*.js"
    ],
    "concurrency": 5,
    "failFast": true,
    "powerAssert": true,
    "require": [
      "babel-register"
    ],
    "babel": "inherit"
  }
}
