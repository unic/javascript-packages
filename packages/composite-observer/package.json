{
  "name": "@unic/composite-observer",
  "version": "0.0.9",
  "description": "Simple observer composite to use for your factories",
  "scripts": {
    "start": "npm run dev",
    "dev": "lerna exec --scope=@unic/composite-observer -- ava --watch",
    "build": "lerna exec --scope=@unic/composite-observer -- webpack --mode production --module-bind js=babel-loader"
  },
  "main": "dist/main.js",
  "keywords": [
    "composite",
    "observer"
  ],
  "author": "Unic AG",
  "repository": "https://github.com/unic/javascript-packages/tree/master/packages/composite-observer",
  "license": "Apache-2.0",
  "publishConfig": {
    "access": "public"
  },
  "ava": {
    "files": [
      "src/**/*.spec.js"
    ],
    "source": [
      "src/**/*.js"
    ],
    "concurrency": 5,
    "failFast": true,
    "powerAssert": true,
    "require": [
      "babel-register"
    ],
    "babel": "inherit"
  }
}
